{{!-- navbar partial --}}
{{> nav}}

{{!-- main --}}
<main>
  {{!-- msg --}}
  {{#if msg }}
  {{#if error}}
  <div class="feedback valign-wrapper custom-container error">
    <i class="tiny material-icons helper-icon">info_outline</i>
    <span class="valign-wrapper" data-error="wrong" data-success="right">{{ msg }}</span>
  </div>
  {{/if}}
  {{#unless error}}
  <div class="feedback valign-wrapper custom-container success">
    <i class="tiny material-icons helper-icon">info_outline</i>
    <span class="valign-wrapper" data-error="wrong" data-success="right">{{ msg }}</span>
  </div>
  {{/unless}}
  {{/if}}

  <div class="custom-container bg-grey mt-20">

    {{!-- heading --}}
    <div class="row center-align">
      <div class="col s12">
        <h4>Profile</h4>
      </div>
    </div>

    {{!-- image photo --}}
    <div class="row">
      <div class="col s12">
        <div class="center-align">
          {{!-- <img src="http://placehold.it/350x250.jpg"> --}}
          {{!-- PROFILE PICTURE GOES HERE --}}
        </div>
      </div>
    </div>

    {{!-- user info --}}
    <div class="row">
      <div class="col s12">
        <ul class="collection">
          <li class="collection-item">Username: {{username}}</li>
          <li class="collection-item">Join: {{createdAt }}</li>
          <li class="collection-item">Last Room: {{room}}</li>
          {{#each share}}
          <li class="collection-item">Room Is Accessible To: {{this}}</li>
          {{/each}}
          {{!-- <li class="collection-item">Access: {{share}}</li> --}}
        </ul>
      </div>
    </div>

    {{!-- <div class="row ">
      <div class="col s12 m10 pull-m1 push-m1 ">
        <button class="btn waves-effect waves-light" id="edit-profile-btn" type="submit" name="action">Edit Profile
          <i class="material-icons right">edit</i>
        </button>
      </div>
    </div> --}}



  </div>




</main>


{{> footer}}